      BoundingBoxTopLeftHandCorner.Y:=100;
      BoundingBoxBottomRightHandCorner.X:=200;
      BoundingBoxBottomRightHandCorner.Y:=200;
      BoundingBoxTextHorizontalJustification:=1; //(Left,Center,Right);
    end;
  end;


end;


